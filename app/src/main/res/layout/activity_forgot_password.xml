<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cognifygroup.vgold.ForgotPasswordActivity">


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:padding="@dimen/height_20"
        android:src="@drawable/vlogo"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/imgLogo"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">


        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="@dimen/height_25"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/colorblack"
            app:hintTextAppearance="@style/mytext">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblack"
                android:hint="Enter registered email id"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textSize="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/BtnSubmitEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Submit"
            android:textColor="@color/colorwhite"
            android:gravity="center"
            android:background="@drawable/border_for_button"
            android:layout_marginTop="15dp"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

    </LinearLayout>



</RelativeLayout>
