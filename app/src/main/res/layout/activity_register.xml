            android:textColor="@color/colorwhite"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:src="@drawable/vlogo"/>

