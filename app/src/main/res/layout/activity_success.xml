<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cognifygroup.vgold.SuccessActivity">


    <TextView
        android:id="@+id/txtb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Transaction is successfully done"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/colorgreen"
        android:layout_below="@+id/ImageView"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="0dp"/>

    <TextView
        android:id="@+id/txttr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transaction Id - q5afs4sf"
        android:gravity="center"
        android:textSize="20dp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/height_20"
        android:layout_below="@+id/txtb"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="0dp"/>

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ok"
        android:layout_marginRight="@dimen/height_15"
        android:layout_marginLeft="@dimen/height_15"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/txttr"
        android:textColor="@color/colorwhite"
        android:background="@drawable/border_for_button"/>


</RelativeLayout>
