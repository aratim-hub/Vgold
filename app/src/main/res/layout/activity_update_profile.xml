<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cognifygroup.vgold.UpdateProfileActivity">



    <RelativeLayout
        android:id="@+id/rlc"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImg"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:padding="5dp"
            android:foregroundGravity="center_horizontal"
            android:src="@drawable/black_user"/>

        <!--          <ProgressBar
                      android:id="@+id/progressbar_category"
                      android:layout_width="90dp"
                      android:layout_height="90dp"
                      android:padding="30dp" />-->

        <ImageView
            android:id="@+id/imgUserProfile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/userImg"
            android:layout_alignRight="@+id/userImg"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/plus" />

    </RelativeLayout>



    <LinearLayout
        android:layout_below="@+id/rlc"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/colorblack"
            app:hintTextAppearance="@style/mytext">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Email"
                android:textColor="@color/colorblack"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/colorblack"
            app:hintTextAppearance="@style/mytext">

            <EditText
                android:id="@+id/edtMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Mobile"
                android:textColor="@color/colorblack"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:inputType="phone"
                android:textSize="15sp"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/colorblack"
            app:hintTextAppearance="@style/mytext">

            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblack"
                android:hint="Enter your address"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textSize="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/colorblack"
            app:hintTextAppearance="@style/mytext">

            <EditText
                android:id="@+id/edtCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblack"
                android:hint="Enter your City"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textSize="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/colorblack"
            app:hintTextAppearance="@style/mytext">

            <EditText
                android:id="@+id/edtState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblack"
                android:hint="Enter your State"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:textSize="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btn_submit_sign_up"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="UPDATE"
            android:textColor="@color/colorwhite"
            android:gravity="center"
            android:background="@drawable/border_for_button"
            android:layout_marginTop="15dp"
            android:textAppearance="?android:attr/textAppearanceSmall"/>


    </LinearLayout>


</RelativeLayout>
